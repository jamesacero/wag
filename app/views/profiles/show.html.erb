
<div class="large-6 columns"><%= image_tag(current_user.profile_photo) %></div>

<div class="user-info large-4 columns">
  <h2>User Profile Page</h2><br>
  <h3>
  <div>User Email: <%= current_user.email %></div>
  <div>Name: <%= current_user.first_name %> <%= current_user.last_name %></div>
  <div>Address:</div>
  <div><%= current_user.address %></div>
  <div><%= current_user.city %> <%= current_user.state %></div>
  <div><%= current_user.zipcode %></div>
  </h3>
</div>

<div class="panel large-10 columns">
  <h4>Edit Profile</h4>
  <%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :profile_photo, "Profile Photo" %><br />
    <%= f.file_field :profile_photo %>
  </div>

  <div class="field" id="add_a_dog">
    <%= f.label :dog, "Would you like to add a dog to your profile?" %>
    <%= f.select :dog, [["No", false],["Yes", true]], selected: false %>
  </div>

  <div id="dog_info">
    <h4>Please enter your dog's information below!</h4>

  
  </div>

  <div class="actions">
    <%= f.submit "Save Changes", class: "button round" %>
  </div>
<% end %>
</div>
