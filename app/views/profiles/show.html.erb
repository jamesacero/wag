
<div class="large-6 columns"><%= image_tag(current_user.profile_photo) %></div>

<div class="user-info large-4 columns">
  <h2>User Profile Page</h2><br>
  <h4>
  <div>User Email: <%= current_user.email %></div>
  <div>Name: <%= current_user.first_name %> <%= current_user.last_name %></div>
  <div>Address:</div>
  <div><%= current_user.address %></div>
  <div><%= current_user.city %> <%= current_user.state %></div>
  <div><%= current_user.zipcode %></div>
  <br>
</div>

<div class="dog-pen large-10 columns", id="user_dogs">
<h4> Your Dogs </h4>
  <div>
    <ul>
      <% current_user.dogs.each do |d| %>
      <div class="panel">
      <p>Name: <%= d.name %></p>
      <p>Gender: <%= d.gender %></p>
      <p>Age: <%= d.age  %></p>
      <p>Breed: <%= d.breed  %></p>
        <% if current_user %>
          <%= link_to "Remove Dog", @dog, method: :delete,
          data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
      <% end %>
    </ul>
  </div>
</div>

  </h3>

<div class="panel large-10 columns">
  <h4>Edit Profile</h4>
  <%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :profile_photo, "Profile Photo" %><br />
    <%= f.file_field :profile_photo %>
  </div>

  <div class="actions">
    <%= f.submit "Save Changes", class: "button round", id: "save_button" %>
  </div>

  <div class="field">
    <%= f.label :dog, "Would you like to add a dog to your profile?" %>
    <%= f.select :dog, [["No", false],["Yes", true]], selected: false %>
  </div>

<% end %>

  <div id="dog_info" style="display: none;">
    <h4>Please enter your dog's information below!</h4>

      <%= form_for [@user, Dog.new] do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Enter your dog's name here!" %>
    </div>

    <div class="field">
      <%= f.label :gender %>
      <%= f.select :gender, [["Male"], ["Female"]] %>
    </div>

    <div class="field">
      <%= f.label :age %>
      <%= f.text_field :age, placeholder: "About how old is your dog?" %>
    </div>

    <div class="field">
      <%= f.label :breed %>
      <%= f.select :breed,
          Dog::BREED, class: "button dropdown", html_options: size=30 %>
    </div>

    <div class="actions">
      <%= f.submit "Add Your Dog!", class: "button round" %>
    </div>
    <% end %>

  </div>
</div>
