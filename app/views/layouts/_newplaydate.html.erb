<%= form_for @playdate do |f| %>
    <%= f.label :date %>
    <%= f.date_select :date, autofocus: true, required: true %>

    <%= f.label :time %>
    <%= f.time_field :time, autocomplete: "off", required: true %>

    <%= f.label :location_type %>
    <%= f.select :location_type,
    Playdate::LOCATIONTYPE, class: "button dropdown" %>

    <%= f.label :location_address %>
    <%= f.text_field :address, autocomplete: "off", required: true %>

    <%= f.label :city %>
    <%= f.text_field :city, autocomplete: "off", required: true %>

    <%= f.label :state %>
    <%= f.text_field :state, autocomplete: "off", required: true %>

    <%= f.submit "Save New Playdate", class: "button round", id: "save_button" %>
    <% end %>
