<head>
  <meta charset="utf-8">
  <title>Join a Playdate!</title>
</head>

<div class="row">
  <div class="large-12 columns">
  <div id="slider" centered>
    <img abel src="/abel-banner.jpg"/>
  </div>
  <hr/>
  </div>
</div>

<body class="playdates-bg">
  <div class="row playdates-join">
      <h1 class="white text-center">Join a Playdate</h1>
    <% @playdates.each do |p| %>
    <div class="large-4 columns">
      <img src="http://placehold.it/400x300&text=[img]"/>
      <h4 class="white text-center"><%= p.location %></h4>
      <h5 class="white text-center"><%= p.location_type %></h5>
      <p><li class="white title text-center">Playdate: <%= p.date %><br>
          Time: <%= p.time.getlocal %></p>
    </div>
    <% end %>
  </div>
</body>
